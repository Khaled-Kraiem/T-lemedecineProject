{% extends "base.html.twig" %}

{% block body %}
	<form action="{{ path('security_login') }}" method="post">
		<div class="row">
			<div class="col-sm-4"></div>
			<div class="col-sm-4">
				<div class="form-group">
					<label for="email">Votre Email</label>
					<input type="text" id="email" class="form-control" placeholder="Email address" required name="_username">
				</div>
				<div class="form-group">
					<label for="Motdepasse">Votre Mot de passe</label>
					<input id="Motdepasse" type="password" class="form-control" placeholder="Mot de passe" required name="_password">
				</div>
				<div class="form-group">
					<center>
						<button class="btn btn-success" type="submit">Connexion</button>
					</center>
				</div>
			</div>
			<div class="col-sm-4"></div>
		</form>
	{% endblock %}
